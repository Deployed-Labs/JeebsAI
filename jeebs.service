[Unit]
Description=JeebsAI Server
After=network.target

[Service]
Type=simple
# Run as a standard user since Nginx handles port 80/443.
# Replace 'your_username' with your actual Linux username.
User=your_username
WorkingDirectory=/path/to/JeebsAI-1
ExecStart=/path/to/JeebsAI-1/target/release/jeebs
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target